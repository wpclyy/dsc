.index-goods-list .list-box .h4 {
  padding: 15rpx;
  height: 64rpx;
  overflow: hidden;
  display: block;
  word-wrap: break-word;
}

/*nav*/

.nav {
  padding: 20rpx 0;
  font-size: 30rpx;
  color: #777;
  text-align: center;
}

.header {
  width: 100%;
  height: 40px;
  border-bottom: 1px solid #eee;
  border-top: 1px solid #eee;
  display: flex;
  background: #fff;
  line-height: 40px;
  position: fixed;
  top: 0;
  z-index: 99;
}

.index-goods-list {
  margin-top: 44px;
}

.header view {
  flex: 1;
  text-align: center;
}

.header .active {
  color: #fd4a5f;
}

/*****************************   弹框  *****************************/

/*遮罩层*/

.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #000;
  opacity: 0.5;
  z-index: 99;
  bottom: 0;
}

/*初始隐藏*/

.hidden {
  display: none;
}

.t_product {
  position: fixed;
  top: 0;
  bottom: 0;
  right: -380px;
  z-index: 100;
  background-color: #fff;
  width: 90%;
}
