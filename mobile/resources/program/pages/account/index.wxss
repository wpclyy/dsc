.account-header {
  padding: 30px 15px 50px 15px;
  background: #f42424;
  color: #fff;
  position: relative;
}

.account-header text {
  display: block;
}

.account-detail {
  position: absolute;
  top: 10px;
  right: 15px;
  font-size: 24rpx;
  border: 1px solid rgba(255, 255, 255, 0.3);
  border-radius: 30rpx;
  padding: 5rpx 18rpx;
  background:rgba(50, 50, 50, 0.1)
}

.account-header .name {
  font-size: 26rpx;
}

.account-header .price {
  font-size: 60rpx;
  padding: 10rpx 0;
}

.account-header .account_tishi {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  font-size: 24rpx;
  padding: 15rpx;
  background: rgba(0, 0, 0, 0.2);
}

.account-header image {
  width: 100%;
  height: 200rpx;
  display: block;
}

.account_cont {
  background: rgba(0, 0, 0, 0.1);
  text-align: center;
  padding: 20rpx 0;
  font-size: 30rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
}

.account_cont .li {
  color: #fff;
}

.account_cont .li:first-child {
  border-right: 1px solid rgba(255, 255, 255, 0.4);
}

/*明细*/

.account_list_box {
  background: #fff;
  padding: 10px 15px;
  border-bottom: 1px solid #eee;
}

.account_list_box .ul .left {
  font-size: 24rpx;
}

.account_list_box .ul .right {
  font-size: 30rpx;
  text-align: right;
  color: #f42424;
}

.account_list_box .time {
  font-size: 24rpx;
  color: #999;
}

/*列表*/

.profile-list {
  padding: 20rpx 0;
  border-bottom: 1px solid #f6f6f9;
}

.profile-list .admin {
  padding-left: 15px;
  font-size: 33rpx;
  color: #222;
}

.profile-list .name {
  padding-right: 15px;
  font-size: 30rpx;
  color: #222;
}

.user-orderJtou {
  width: 26rpx;
  height: 26rpx;
}
