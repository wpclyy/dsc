.goods-left,.goods-right{flex:1;font-size:28rpx;line-height:40rpx;height:40rpx;justify-content:center;display:flex;}
.goods-center{flex:3;}
.goods-right image{width:60rpx;height:20rpx;padding-top:35rpx;}
.header-box{display: flex;  border-bottom:#eee solid 1px;}
.header{
  width: 100%;
  height: 44px;
  border-bottom: 1px solid #eee;
  display: flex;
  background: #fff;
  line-height: 44px;
  position: relative;
  font-size: 30rpx;
}
.header view{
  flex: 1;
  text-align: center;
}
.wrapper{
  flex: 1;
}
.main-swiper{
  height:400px;
}
.shift{
  position:absolute;
  bottom: 0;
  height: 1px;
  width: 20%;
  background: #fd4a5f;
}
.header .active{
  color: #fd4a5f;
}

.goods-detail-box .wrapper .main-swiper .title{font-size:30rpx; color:#555;padding:15rpx 0;}
.goods-detail-box .wrapper .main-swiper .contimg{width:710rpx;height:750rpx;}
.goods-detail-box,.wrapper .main-swiper .contimg image{width:100%;height:100%;}
.goods-service-cont{margin-top:10rpx;overflow:hidden;}
.goods-service-cont text{margin-left:5rpx;}


